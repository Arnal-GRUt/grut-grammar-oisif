---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
    imagePath: string;
    altText: string;
}
const { imagePath, altText } = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>(
    "../images/*.{jpeg,jpg,png,gif}",
);
if (!images[imagePath])
    throw new Error(
        `"${imagePath}" does not exist in glob: "../images/*.{jpeg,jpg,png,gif}"`,
    );
---

<div class="figure">
    <Image src={images[imagePath]()} alt={altText} />
    <div class="figcaption">{altText}</div>
</div>
<style>
    #Gribouille .contenu-page .main.grid {
        max-width: 60rem;
        margin: 0 auto;
        display: grid;
        gap: 1em;
        grid-template-columns: repeat(3, 1fr);
        grid-template-rows: masonry;

        & a.lien-post:first-of-type {
            grid-column: span 2;
        }
    }
</style>
