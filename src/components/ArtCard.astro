---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
    imagePath: string;
    altText: string;
    description: string;
}
const { imagePath, altText, description } = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>(
    "../artwork/*.{jpeg,jpg,png,gif}",
);
if (!images[imagePath])
    throw new Error(
        `"${imagePath}" does not exist in glob: "../artwork/*.{jpeg,jpg,png,gif}"`,
    );
---

<div class="figure">
    <Image src={images[imagePath]()} alt={altText} />
    <div class="figcaption">{description}</div>
</div>
