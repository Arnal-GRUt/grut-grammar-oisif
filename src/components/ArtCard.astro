---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";
import { map } from "astro:schema";
import { propsToFilename } from "astro/assets/utils";

interface Props {
    imagePath: string;
    altText: string;
    description: string;
}
const { imagePath, altText, description } = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>(
    "../artwork/*.{jpeg,jpg,png,gif}",
);
if (!images[imagePath])
    throw new Error(
        `"${imagePath}" does not exist in glob: "../artwork/*.{jpeg,jpg,png,gif}"`,
    );
