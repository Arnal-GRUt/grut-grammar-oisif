---
const { title, url, pubDate, tag} = Astro.props;
import PostTags from "./postTags.astro";
const allPosts = Object.values(
  await Astro.glob('../pages/posts/*.md', { eager: true })
  
);
---

<!-- <div class="info-texte"> -->
<article>
    <p class="titre-texte">{title}</p>
    <span>{pubDate}</span>
    <ul class="tags">
      {
        allPosts.map((post: any) => (
          <PostTags tag={post.frontmatter.tags}/>
        ))        
      }
    </ul>
    <a href={url}></a>
</article>
