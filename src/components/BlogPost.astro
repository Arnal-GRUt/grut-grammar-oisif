---
const { title, url, pubDate, tags} = Astro.props;
import postTabs from "./postTags.astro";
const allPosts = Object.values(
  await Astro.glob('../pages/posts/*.md', { eager: true })  
);

---

<!-- <div class="info-texte"> -->
<article>
    <p class="titre-texte">{title}</p>
    <p>{pubDate}</p>
    <ul class="tags">
        {
         allPosts.map ((post: any) => (
          <postTags tag={post.frontmatter.tag}/>
        ))
      }    
    </ul>
    <a href={url}></a>
</article>
