---
// import PostTags from "../components/postTags.astro";
const { title, url, pubDate, author, contexte, enonce } = Astro.props;
---

    <div class="display-flex direction-column presentation">
        <div class="display-flex carton-presentation direction-column">
            <h2>{title}</h2>
            <p class="date-et-auteur">
                <span class="date-publication"> {pubDate}</span><span>|</span><span
                    class="auteur">{author}</span
                >
            </p>
        </div>
        <div class="display-flex introduction direction-column">
            <h3>Présentation / contexte</h3>
            <p>{contexte}</p>
            <h3>Énoncé</h3>
            <p>{enonce}</p>
        </div>
        <div class="display-flex boite-contrainte">
            <h3>Contraintes</h3>
            <ul class="tags">
                <!-- {tags.map((tag) => <PostTags tag={tag} />)} -->
                <li class="tag">test</li>
                <li class="tag">test test</li>
                <li class="tag">test test test</li>
                <li class="tag">test test</li>
                <li class="tag">test</li>
            </ul>
        </div>
        <a href={url}></a>
    </div>

<!-- Style -->
<style>

    h2 {
        font-size: 1.5rem;
    }

    h3 {
        font-size: 1.2rem;
    }

    p.date-et-auteur {
        font-size: 0.8rem;
        display: flex;
        flex-direction: row;
        gap: 8px;
    }
    div.contenu-texte {
        border-bottom: 2px dashed var(--black);
    }
    
    .display-flex.direction-column.presentation {
            max-width: calc(640px - 4ch);
            width: 100%;
            border-bottom: 2px dashed var(--black);
            padding: 24px;
    }

    .display-flex.direction-column.contenu-texte {
        padding: 3vh 24px;
        max-width: 672px;
        position: relative;
    }

    /* ul.categories { */
ul.tags {
	display: flex;	
    gap: 8px;
    flex-wrap: wrap;
    font-size: .8rem;
    line-height: 2ch;
    padding-bottom: 1ch;
    display: flex;
    margin-left: 0;
    padding-left: 0;
}

/* ul.categories li { */
ul.tags li.tag {
    font-size: .8rem;
    font-weight: 400;
    font-family: "Source Serif 4", serif;
    background: var(--white);
    padding: 1ch;
    border-radius: 4px;
    cursor: pointer;

	&:hover {
		background: var(--black);	
		color: var(--background);
		
		& a {
			color: var(--background);		
		}
	}

	&::before{
		display: none;
	}
}
</style>
