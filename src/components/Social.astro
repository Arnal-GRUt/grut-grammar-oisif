---
const { platform, username } = Astro.props;
---
<a href={`https://www.${platform}.com/${username}`}>{platform}</a>


<style>
  a {
    padding: 0.5rem 0.5rem;
    color: white;
    background-color: #4c1d95;
    text-decoration: none;
    border-radius: 8px;    
    transition: filter 0.2s ease-in-out;

    &:hover {
        filter: grayscale(90%);
    }
  }
</style>