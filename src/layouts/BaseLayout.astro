---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
const { pageTitle } = Astro.props;
// const pageTitle ="Grammar Oisif";
---

<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link
      href="https://fonts.googleapis.com/css2?family=Chelsea+Market&family=Londrina+Shadow&family=Special+Elite&family=Trade+Winds&family=VT323&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Chelsea+Market&family=Jersey+25&family=Libre+Franklin:ital,wght@0,100..900;1,100..900&family=Londrina+Shadow&family=Special+Elite&family=Trade+Winds&family=VT323&display=swap"
      rel="stylesheet"
    />
    <title>{pageTitle}</title>
  </head>
  <body>
    <Header />
    <div class="main">
      <div class="image-container">
        <img
          class="image-reveal"
          src="../../src/images/route-grut.png
          alt="test"
        />
        <div class="carton-texte"></div>
      </div>
      <slot />
    </div>
    <Footer />
    <script>
      import "../scripts/menu.js";
    </script>
  </body>
</html>
