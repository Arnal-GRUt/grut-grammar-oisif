---
import BaseLayout from "../../layouts/BaseLayout.astro";
import BlogPost from "../../components/BlogPost.astro";

const { posts } = Astro.props;
const tous = Object.values(import.meta.glob("./posts/*.md", { eager: true }));

export async function getStaticPaths() {
    const allPosts = Object.values(
        import.meta.glob("../posts/*.md", { eager: true }),
    );

    const uniqueTags = [
        ...new Set(allPosts.map((post: any) => post.frontmatter.tags).flat()),
    ];

    return uniqueTags.map((tag) => {
        const filteredPosts = allPosts.filter((post: any) =>
            post.frontmatter.tags.includes(tag),
        );
        return {
            params: { tag },
            props: { posts: filteredPosts },
        };
    });
}

const { tag } = Astro.params;
---

<BaseLayout pageTitle={tag}>
    <div class="contenu-page display-flex direction-row">
        <div class="main tags">
            <ul class="tags">
                {
                    tous.map((post: any) => (
                        <li class="tag">
                            <a href={`/tags/${tag}`}>{tag}</a>
                        </li>
                    ))
                }
            </ul>
            <ul class="tag-selection display-flex direction-row">
                <h1 class="soustitre-page">{tag}</h1>
                {
                    posts.map((post: any) => (
                        <BlogPost
                            url={post.url}
                            title={post.frontmatter.title}
                            pubDate={post.frontmatter.pubDate}
                            author={post.frontmatter.author}
                            contexte={post.frontmatter.contexte}
                            enonce={post.frontmatter.enonce}
                            tags={post.frontmatter.tags}
                        />
                    ))
                }
            </ul>
        </div>
    </div>
</BaseLayout>
<style>
    .contenu-page {
        align-items: flex-start;
        justify-content: flex-start;
        margin-top: 0;
    }
    .contenu-page .main.tags {
        min-width: calc(100% - 24px);
        min-height: 100vh;
        align-items: flex-start;
        justify-content: flex-start;
    }
    .main.tags ul.tag-selection {
        margin-top: 5vw;
        width: 100%;
        align-items: center;
        display: flex;
        justify-content: start;
        align-items: flex-start;
        background: var(--background);
        /* padding-left: 0; */
        gap: var(--gap-24);
        height: auto;
        flex-wrap: wrap;
    }
</style>
